{{#ifEquals pet.owner_id userId}}
<div class="card">
    <div class="card-header">
        <h3>{{pet.name}}</h3>
    </div>
    <div class="card-body d-grid">
        <form action="/pets/mypets/rename/{{pet._id}}?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
            <div class="form-group d-grid">
                <p>
                    <input type="hidden" name="controlname" value="{{pet.name}}">
                    <label for="name">Nombre</label>
                    <input type="text" name="name" class="form-control" placeholder="Nombre" value="{{pet.name}}">
                </p>
                <button class="btn btn-primary btn-block">Renombrar</button>
            </div>
        </form>
        <div class="form-group d-grid">
            Raza<input type="text" class="form-control" value="{{pet.race}}" disabled>
        </div>
        <div class="form-group d-grid">
            Fecha de nacimiento<input type="text" class="form-control" value="{{birthdate}}" disabled>
        </div>
        <div class="form-group d-grid">
            Género<input type="text" class="form-control" value="{{pet.gender}}" disabled>
        </div>
        <div class="form-group d-grid">
            color<input type="text" class="form-control" value="{{pet.color}}" disabled>
        </div>
        <div class="form-group d-grid">
            {{#if pet.vaccinated}}
            <p>esta mascota está vacunada</p>
            {{else}}
            <a href="/pets/mypets/vaccinate/{{pet._id}}" class="btn btn-success">Vacunar</a>
            {{/if}}
            {{#if pet.castrated}}
            <p>esta mascota está castrada</p>
            {{else}}
            <a href="/pets/mypets/castrate/{{pet._id}}" class="btn btn-success">Castrar</a>
            {{/if}}
            {{#if pet.aggressive}}
            <p>esta mascota es agresiva, ten cuidado D:</p>
            {{else}}
            <p>Esta mascota es dócil :)</p>
            {{/if}}
        </div>
    </div>
</div>
{{else}}
<div class="card mt-4">
    <h1 class="display-3">No tienes permisos para modificar esta mascota</h1>
</div>
{{/ifEquals}}